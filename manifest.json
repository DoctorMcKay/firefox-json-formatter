{
	"manifest_version": 2,
	"name": "Basic JSON Formatter",
	"version": "1.0.0",
	"description": "Adds a page action to pretty-print JSON",
	"icons": {
		"48": "icon-48.png"
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["formatter.js"]
		}
	],
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"webRequest",
		"<all_urls>"
	],
	"page_action": {
		"browser_style": true,
		"default_icon": {
			"48": "icon-48.png"
		},
		"default_title": "Format JSON"
	}
}
